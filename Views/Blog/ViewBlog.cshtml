                    </span>


                </div>





            </div>

            <div class="mt-10">
                @Html.Raw(@Model.Content)
            </div>

            <div class="mx-10 mb-10 mt-20 flex flex-row gap-5">
                
                    
                    @foreach (var tag in Model.Tags)
                    {
                    <div class="badge badge-accent">   @tag</div>
                          
                        
                    }

                
            </div>



          </div>





     </div>

     <div class="col-span-3 fixed left-10 top-10">
         @* image of post  *@

         <div class="flex flex-row items-center justify-center">
            <img src="@Model.ImageUrl"    class="mt-16 h-[450px] w-[450px] rounded-2xl" />
         </div>
     </div> 
     
   

